<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.HomeNavigationScreens.SearchScreens.ResuiltSearchingActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home_fragment_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/city_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:gravity="center"

            android:textSize="@dimen/_23ssp" />

        <TextView
            android:id="@+id/data_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:gravity="center"

            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="126dp"
            android:layout_height="95dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"

            android:textSize="@dimen/_20ssp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"

                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/temperature"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/temperature" />

                    <TextView
                        android:id="@+id/temp_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/YEllow"

                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Slate_Blue_light"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:background="@color/Slate_Blue_light"
                        android:gravity="center"
                        android:text="@string/humidity"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:background="@color/Slate_Blue_light"
                        android:src="@drawable/humidity" />

                    <TextView
                        android:id="@+id/humidity_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:background="@color/Slate_Blue_light"
                        android:gravity="center"
                        android:textColor="@color/YEllow"
                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/wind_speed"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/wind" />

                    <TextView
                        android:id="@+id/wind_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/YEllow"

                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/pressure"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/pressure_gauge" />

                    <TextView
                        android:id="@+id/pressure_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/YEllow"

                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/sunrise"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/sunrise" />

                    <TextView

                        android:id="@+id/sunrise_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/YEllow"
                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_6sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/CARD_VIEW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <TextView
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/sunset"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        style="@style/CARD_VIEW"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/sunset" />

                    <TextView
                        android:id="@+id/sunset_txt"
                        style="@style/CARD_VIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/YEllow"

                        android:textSize="@dimen/_13sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/text_view_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/today"
                android:textSize="@dimen/_16ssp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/today_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/custm_item_hourly_weather" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/shimmer_home"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/shimmer_layout_home">
            </include>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>